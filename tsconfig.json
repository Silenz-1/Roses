{
  "compilerOptions": {
    /* Language and Environment */
    "target": "EsNext",                                 
    "experimentalDecorators": true,                   
    "emitDecoratorMetadata": true,
    "lib": ["ESNext"],          


    /* Modules */
    "module": "ESNext",                                
    "rootDir": "./src",                                  
    "moduleResolution": "node",                       

    /* Emit */
    "outDir": "./dist",
    "importHelpers": true,
    "importsNotUsedAsValues": "preserve",
    "removeComments": true,                                  

    /* Interop Constraints */
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            

    /* Type Checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,                          

    /* Completeness */
    "skipLibCheck": true                                 
  }
}
